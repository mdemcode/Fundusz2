<Window x:Class="Fundusz2.View.PozyczkiView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:z="clr-namespace:Fundusz2.Zachowania"
        xmlns:dodatki="clr-namespace:Fundusz2.Dodatki"
        
        DataContext="{Binding PozyczkiVM, Source={StaticResource Locator}}"
        
        Title="POZYCZKI" Height="500" Width="1000" Left="50" Top="50" 
        Background="#FF4696BB" AllowsTransparency="True" 
        BorderBrush="Aqua" BorderThickness="2"
        WindowStyle="None">

    <!--ZASOBY-->
    <Window.Resources>
        <dodatki:NrPozyczkiKonwerter x:Key="konwersjaNumeruPozyczki" />
    </Window.Resources>

    <i:Interaction.Behaviors>
        <z:ZamknijOkno x:Name="zamknijOkno" Przycisk="{Binding ElementName=ButtonZamknij}" />
    </i:Interaction.Behaviors>
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF648FEC" Offset="0"/>
                <GradientStop Color="#FF98E898" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label VerticalAlignment="Center" 
               Grid.ColumnSpan="4" 
               VerticalContentAlignment="Center" 
               HorizontalAlignment="Center" 
               HorizontalContentAlignment="Center" 
               FontSize="36" 
               FontFamily="Monotype Corsiva">
            POŻYCZKI
        </Label>

        <StackPanel Margin="2" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            <DataGrid x:Name="DataGridPozyczki" 
                      Margin="20" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      ItemsSource="{Binding ViewSource.View}" 
                      FontSize="16"
                      Background="{x:Null}"
                      RowBackground="LightBlue"
                      BorderThickness="2"
                      MinRowHeight="35"
                      RowHeaderWidth="0" 
                      ColumnHeaderHeight="35">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nr pożyczki" Width="1*">
                        <DataGridTextColumn.Binding>
                            <MultiBinding Mode="OneWay"  Converter="{StaticResource konwersjaNumeruPozyczki}">
                                <Binding Path="NrPozyczki"/>
                                <Binding Path="PostFix"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Pozyczkobiorca" Width="1*" Binding="{Binding Pozyczkobiorca.ImieNazwisko}"/>
                </DataGrid.Columns>
                
            </DataGrid>
        </StackPanel>

        <StackPanel Margin="2" Grid.Row="1" Grid.Column="3">

        </StackPanel>



        <Button x:Name="TestButton" Grid.Row="4" Grid.Column="0" Height="35" Width="70" Margin="10" Content="Test" VerticalAlignment="Bottom" HorizontalAlignment="Right" Command="{Binding PolecenieTestowe}" />

        <Button x:Name="ButtonZamknij" Grid.Row="4" Grid.Column="3" Height="40" Width="40" Margin="8" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="{x:Null}" >
            <Image Source = "..\Dodatki\Grafiki\cancel.png"></Image>
        </Button>

    </Grid>
</Window>
